# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,GNUmakefile,makefile,*.makefile,*.make}]
indent_style = tab

[*.sh]
end_of_line = lf
[*.{cmd,bat}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[*.{xml,json,yml,yaml,html}]
indent_size = 2
